<%- include("../partials/_header") %>
  <main id="main" class="main">
    <div class="pagetitle">
      <h1>Order Overview</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item active">Order Overview</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section dashboard">
      <div class="row">
        <div class="col-lg-12">
          <div class="row">
            <div class="col-xxl-12 col-md-12 d-flex justify-content-end">
              <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#basicModal">
                Create New Order
              </button>&nbsp;&nbsp;
             
            </div>
          </div>

        </div>
      </div>
      <hr>
      <div class="row" style="overflow-x: auto; overflow-y: hidden;">
        <div class="col-lg-12">
          <div class="row">
            <div class="col-xxl-12 col-md-12">
              <table id="example" class="ui celled table" style="width:100%">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Order #</th>
                    <th>Name</th>
                    <th>Mobile</th>
                    <th>Address</th>
                    <th>Item Type</th>
                    <th>Rate</th>
                    <th>Weight</th>
                    <th>Purchase Amt</th>
                    <th>Advance Amt</th>
                    <th>Old Item Type</th>
                    <th>Old Rate</th>
                    <th>Old Weight</th>
                    <th>Old Amt</th>
                    <th>Order On</th>
                    <th>Expected On</th>
                    <th>Delivered On</th>
                    <th>Status</th>
                  </tr>
                </thead>
                <tbody>
                  <% if(stocks) { for(var idx=0; idx<stocks.length; idx++) { %>
                    <tr>
                      <td>
                        <%= parseInt((idx+1)) %>
                      </td>
                      <td>
                        <%= stocks[idx].ORDER_NO %>
                      </td>
                      <td>
                        <%= stocks[idx].NAME %>
                      </td>
                      <td>
                        <%= stocks[idx].MOBILE %>
                      </td>
                      <td>
                        <%= stocks[idx].ADDRESS %>
                      </td>
                      <td>
                        <%= stocks[idx].ITEM_TYPE %>
                      </td>
                      <td>
                        <%= stocks[idx].RATE %>
                      </td>
                      <td>
                        <%= stocks[idx].WEIGHT %>
                      </td>
                      <td>
                        <%= stocks[idx].PURCHASE_AMT %>
                      </td>
                      <td>
                        <%= stocks[idx].ADVANCE_AMT %>
                      </td>
                      <td>
                        <%= stocks[idx].ITEM_TYPE %>
                      </td>
                      <td>
                        <%= stocks[idx].OLD_RATE %>
                      </td>
                      <td>
                        <%= stocks[idx].OLD_WEIGHT %>
                      </td>
                      <td>
                        <%= stocks[idx].OLD_ITEM_AMT %>
                      </td>
                      <td>
                        <%= stocks[idx].EXPECTED_ON %>
                      </td>
                      <td>
                        <%= stocks[idx].DELIVERED_ON %>
                      </td>
                      <td>
                        <%= stocks[idx].STATUS %>
                      </td>
                    </tr>
                    <% } } %>
              </table>
            </div>
          </div>
        </div>
      </div>
      <div class="modal fade" id="basicModal" tabindex="-1">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="card-title">New Order</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/addstock" method="POST">
              <div class="modal-body">

                <div class="card">
                  <div class="card-body">
                    <!-- No Labels Form -->
                    <div class="row g-3">
                      <div class="col-md-6">
                        <div class="input-group mb-3">
                          <input type="text" placeholder="Name of the Customer" class="form-control"
                            aria-label="" name="name" id="name" required>
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div class="input-group mb-3">
                          <input type="number" placeholder="Customer Mobile Number" class="form-control"
                            aria-label="" name="mobile" id="mobile" required>
                        </div>
                      </div>
                      <div class="col-md-12">
                        <div class="input-group mb-3">
                          <textarea type="text" placeholder="Name of the Customer" class="form-control"
                            aria-label="" name="address" id="address" rows="3" cols="255"></textarea>
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div class="input-group mb-3">
                          <input type="number" placeholder="Item Type" class="form-control"
                            aria-label="" name="itemType" id="itemType" required>
                        </div>
                      </div>
                      
                      <div class="col-md-6">
                        <div class="input-group mb-3">
                          <span class="input-group-text">Rs</span>
                          <input type="number" placeholder="Material Rate" class="form-control"
                            aria-label="Amount (to the nearest dollar)" name="rate" id="rate" required>
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div class="input-group mb-3">
                          <input type="number" placeholder="Material Weight" class="form-control"
                            aria-label="Amount (to the nearest dollar)" name="weight" id="weight" required>
                          <span class="input-group-text">grams</span>
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div class="input-group mb-3">
                          <span class="input-group-text">Rs</span>
                          <input type="number" placeholder="Material Rate" class="form-control"
                            aria-label="Amount (to the nearest dollar)" name="rate" id="rate" required>
                        </div>
                      </div>
                      <div class="col-md-12">
                        <div class="input-group mb-3">
                          <span class="input-group-text">Rs</span>
                          <input type="number" placeholder="Material Amount" class="form-control"
                            aria-label="Amount (to the nearest dollar)" name="purchaseAmount" id="purchaseAmount"
                            readonly>
                        </div>
                      </div>


                    </div><!-- End No Labels Form -->

                  </div>
                </div>


              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Place Order</button>
              </div>
            </form>
          </div>
        </div>
      </div><!-- End Basic Modal-->
    </section>

  </main><!-- End #main -->
  <script>
    $('#weight').on('input', function (e) {
      var weight = $("#weight").val();
      var rate = $("#rate").val();
      calculateAmount(weight, rate);
    });
    $('#rate').on('input', function (e) {
      var weight = $("#weight").val();
      var rate = $("#rate").val();
      calculateAmount(weight, rate);
    });
    function calculateAmount(weight, rate) {
      if (weight == null || weight == undefined) {
        weight = 0;
      }
      if (rate == null || rate == undefined) {
        rate = 0;
      }
      var amount = weight * rate;
      $("#purchaseAmount").val(amount);

    }
  </script>
  <%- include("../partials/_footer") %>